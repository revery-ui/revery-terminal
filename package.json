{
  "name": "revery-terminal",
  "version": "1.0.0",
  "description": "Terminal emulator built with Revery",
  "license": "MIT",
  "esy": {
    "build": "refmterr dune build -p revery-terminal",
    "install": [
      "esy-installer revery-terminal.install"
    ]
  },
  "revery-packager": {
    "bundleName": "ExampleApp",
    "bundleId": "com.example.app",
    "displayName": "Revery Example App",
    "mainExecutable": "App",
    "windows": {
      "packages": ["zip"],
      "iconFile": "assets/icon.ico"
    },
    "darwin": {
      "packages": ["tar", "dmg"],
      "iconFile": "assets/icon.icns"
    },
    "linux": {
      "packages": ["tar", "appimage"]
    }
  },
  "dependencies": {
    "revery": "0.29.0",
    "reason-libvterm": "github:revery-ui/reason-libvterm#91bad1f",
    "isolinear": "^3.0.0",
    "@glennsl/timber": "1.0.0"
  },
  "resolutions": {
    "revery": "revery-ui/revery#4277c43",
    "@esy-ocaml/libffi": "esy-ocaml/libffi#c61127d",
    "@opam/cmdliner": "1.0.2",
    "esy-cmake": "prometheansacrifice/esy-cmake#2a47392def755"
  },
  "scripts": {
   "format": "esy dune build @fmt --auto-promote",
   "run": "esy x App"

  },
  "devDependencies": {
    "ocaml": "~4.8",
    "@opam/dune": "*",
    "@opam/merlin": "*",
    "esy-macdylibbundler": "*"
  }
}
