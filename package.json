{
  "name": "revery-terminal",
  "version": "1.0.0",
  "description": "Terminal emulator built with Revery",
  "license": "MIT",
  "esy": {
    "build": "refmterr dune build -p revery-terminal",
    "install": [
      "esy-installer revery-terminal.install"
    ]
  },
  "revery-packager": {
    "bundleName": "ExampleApp",
    "bundleId": "com.example.app",
    "displayName": "Revery Example App",
    "mainExecutable": "App",
    "windows": {
      "packages": ["zip"],
      "iconFile": "assets/icon.ico"
    },
    "darwin": {
      "packages": ["tar", "dmg"],
      "iconFile": "assets/icon.icns"
    },
    "linux": {
      "packages": ["tar", "appimage"]
    }
  },
  "dependencies": {
    "revery": "0.29.0",
    "isolinear": "^3.0.0",
    "@glennsl/timber": "^1.2.0",
    "@onivim/reason-native-crash-utils": "^1.0.0",
    "@revery/esy-libvterm": "^1.0.3"
  },
  "resolutions": {
    "revery": "revery-ui/revery#5912a7b",
    "isolinear": "revery-ui/isolinear#8cad3b0"
  },
  "scripts": {
   "format": "esy dune build @fmt --auto-promote",
   "run": "esy x App"
  },
  "devDependencies": {
    "ocaml": "~4.9.1",
    "@opam/dune": "2.5.0",
    "@opam/merlin": "*",
    "esy-macdylibbundler": "*",
    "@opam/ocaml-lsp-server": "ocaml/ocaml-lsp:ocaml-lsp-server.opam#efedf8d6a"
  }
}
